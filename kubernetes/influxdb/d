apiVersion: v1
kind: Namespace
metadata:
    name: influxdb
---
apiVersion: v1
kind: PersistentVolume
metadata:
  name: influxdb-data-pv
  namespace: influxdb
  labels:
    type: local
spec:
  storageClassName: local-path
  capacity:
    storage: 10Gi
  accessModes:
    - ReadWriteOnce
  hostPath:
    path: "/data/k3s/volumes/influxdb/data"
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: influxdb-data-pvc
  namespace: influxdb
spec:
  storageClassName: local-path
  volumeName: influxdb-data-pv
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 10Gi
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: influxdb-config-pvc
  namespace: influxdb
spec:
  accessModes:
    - ReadWriteOnce
  storageClassName: local-path
  volumeName: influxdb-config-pv
  resources:
    requests:
      storage: 1Gi
---
apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app: influxdb
  name: influxdb
  namespace: influxdb
spec:
  replicas: 1
  selector:
    matchLabels:
      app: influxdb
  template:
    metadata:
      labels:
        app: influxdb
    spec:
      containers:
        - image: influxdb:1.11.8
          name: influxdb
          ports:
            - containerPort: 8086
              name: influxdb
            - containerPort: 8088
              name: rpc
          volumeMounts:
             - mountPath: /etc/influxdb
               name: config
             - mountPath: /var/lib/influxdb
               name: data
      volumes:
        - name: config
          persistentVolumeClaim:
            claimName: influxdb-config-pvc
        - name: data
          persistentVolumeClaim:
            claimName: influxdb-data-pvc
---
apiVersion: v1
kind: Service
metadata:
  name: influxdb
  namespace: influxdb
spec:
  allocateLoadBalancerNodePorts: true
  ports:
  - name: influxdb
    port: 8086
    protocol: TCP
    targetPort: 8086
  - name: rpc
    port: 8088
    protocol: TCP
    targetPort: 8088
  selector:
    app: influxdb
  sessionAffinity: None
  type: LoadBalancer
  loadBalancerIP: 192.168.0.75
